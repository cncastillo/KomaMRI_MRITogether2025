@article{tristan-vega_efficient_2021,
  title = {Efficient and Accurate {{EAP}} Imaging from Multi-Shell {{dMRI}} with Micro-Structure Adaptive Convolution Kernels and Dual {{Fourier Integral Transforms}} ({{MiSFIT}})},
  author = {{Trist{\'a}n-Vega}, Antonio and {Aja-Fern{\'a}ndez}, Santiago},
  year = {2021},
